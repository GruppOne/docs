{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build plantuml images",
      "type": "shell",
      "command": "java",
      "args": [
        "-jar",
        "${env:PLANTUML_JAR}",
        "-progress",
        "-failfast",
        "-checkmetadata",
        "-charset",
        "UTF-8",
        "-x",
        "**/commons/style/*.pu",
        "-o",
        "img",
        // compila solo file contenuti in cartelle "diagrams" e sottocartelle
        "**/diagrams/**.pu"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "build current latex document (no diagrams)",
      "command": "${command:latex-workshop.build}",
      "problemMatcher": []
    },
    {
      "label": "build current latex document",
      "dependsOn": [
        "build plantuml images",
        "build current latex document (no diagrams)"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "clean latex files",
      "detail": "Remove all latex-generated files",
      "type": "shell",
      "command": ".pwsh/scripts/Remove-LatexGeneratedFiles.ps1 -RemovePdfs",
      "presentation": {
        "clear": true,
        "echo": false,
        "focus": true,
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "fix current branch out of date with trunk",
      "detail": "Runs git merge --squash --ff master",
      "type": "shell",
      "command": "git status -s && git merge --squash --ff master",
      "presentation": {
        "clear": true,
        "echo": false,
        "focus": true,
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": []
    },
  ]
}
