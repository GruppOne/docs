{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build plantuml images",
      "type": "shell",
      "command": "java",
      "args": [
        "-jar",
        "${env:PLANTUML_JAR}",
        "-progress",
        "-failfast",
        "-checkmetadata",
        "-charset",
        "UTF-8",
        "-x",
        "**/commons/style/*.pu",
        "-o",
        "img",
        // compila solo file contenuti in cartelle "diagrams"
        "**/diagrams/*.pu"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "build current latex document (no diagrams)",
      "command": "${command:latex-workshop.build}",
      "problemMatcher": []
    },
    {
      "label": "build current latex document",
      "dependsOn": [
        "build plantuml images",
        "build current latex document (no diagrams)"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
