{
  "[latex]": {
    "editor.formatOnSave": true,
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "git.autofetch": true,
  // questi due setting sono per chi utilizza direttamente vs code per scrivere i commit
  "git.inputValidationSubjectLength": 72,
  "git.inputValidationLength": 100,
  "git-graph.dialog.rebase.launchInteractiveRebase": true,
  "git-graph.dialog.rebase.ignoreDate": false,
  "git-graph.fetchAndPrune": true,
  "latex-workshop.latex.tools": [
    {
      "name": "lualatex",
      "command": "lualatex",
      "args": [
        "--synctex=1",
        "--interaction=nonstopmode",
        "--c-style-errors",
        "--output-directory=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    // {
    //   "name": "bibtex",
    //   "command": "bibtex",
    //   "args": [
    //     "%DOCFILE%"
    //   ],
    //   "env": {}
    // }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "lualatex",
      "tools": [
        "lualatex",
        "lualatex"
      ]
    }
  ],
  "latex-workshop.chktex.args.active": [
    "-q",
    "-wall",
    "-n22",
    "-e16",
  ],
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.chktex.run": "onSave",
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "todo-tree.regex.regex": "((//|#|<!--|;|%|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
  "spellright.documentTypes": [
    "latex",
    "markdown",
    "plaintext"
  ],
  "spellright.language": [
    "en",
    "it"
  ],
}